<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hex Project</title>
    <style>
        html {
            height: 100%;
        }

        body {
            height: 100%;
        }

        #root {
            height: 100%;
            display: flex;
            flex-direction: column;
        }
    </style>
  </head>
  <body>
    <% if(htmlWebpackPlugin.options.environment === 'prod'){ %>
      <!-- React -->
      <script
          crossorigin
          src="https://unpkg.com/react@17/umd/react.production.min.js"
      ></script>
      <script
          crossorigin
          src="https://unpkg.com/react-dom@17/umd/react-dom.production.min.js"
      ></script>
    <% } else { %>
      <!-- React -->
      <script
          crossorigin
          src="https://unpkg.com/react@17/umd/react.development.js"
      ></script>
      <script
          crossorigin
          src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"
      ></script>
    <% } %>

    <script
        crossorigin
        src="https://cdnjs.cloudflare.com/ajax/libs/react-router-dom/5.2.0/react-router-dom.min.js"
    ></script>

    <div id="root"></div>
  </body>
</html>
